<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobl.clothingmarket"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="34" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <permission
        android:name="com.mobl.clothingmarket.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.mobl.clothingmarket.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ClothingMarket" >
        <activity
            android:name="com.mobl.clothingmarket.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ClothingMarket" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mobl.clothingmarket.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.ClothingMarket" />
        <activity
            android:name="com.mobl.clothingmarket.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.ClothingMarket" />
        <activity
            android:name="com.mobl.clothingmarket.CartActivity"
            android:exported="false"
            android:theme="@style/Theme.ClothingMarket" />
        <activity
            android:name="com.mobl.clothingmarket.AdminActivity"
            android:exported="false"
            android:theme="@style/Theme.ClothingMarket" />
        <activity
            android:name="com.mobl.clothingmarket.ProductDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.ClothingMarket" />
        <activity
            android:name="com.mobl.clothingmarket.EditProductActivity"
            android:exported="false"
            android:theme="@style/Theme.ClothingMarket" />
        <activity
            android:name="com.mobl.clothingmarket.ImageViewerActivity"
            android:exported="false"
            android:theme="@style/Theme.ImageViewer" />

        <service
            android:name="androidx.room.MultiInstanceInvalidationService"
            android:directBootAware="true"
            android:exported="false" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.mobl.clothingmarket.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.profileinstaller.ProfileInstallerInitializer"
                android:value="androidx.startup" />
        </provider>

        <receiver
            android:name="androidx.profileinstaller.ProfileInstallReceiver"
            android:directBootAware="false"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.DUMP" >
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.INSTALL_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SKIP_FILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SAVE_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.BENCHMARK_OPERATION" />
            </intent-filter>
        </receiver>
    </application>

</manifest>